<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-md-5 col-lg-5 m-auto card p-4 bg-light border-light-subtle login">
        <h1 class="text-success mb-4 text-center fs-2">Login</h1>
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Username" id="username" required
                    class="form-control" maxlength="50" autofocus>
                <div class="invalid-feedback">Username is mandatory</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Password" id="password" required
                    class="form-control" maxlength="50">
            </div>

            <button class="btn btn-primary">Login</button>
        </form>
        <a href="/signup" class="text-decoration-none login-signup-a">Sign Up</a>
    </div>
</div>