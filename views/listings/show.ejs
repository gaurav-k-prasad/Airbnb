<% layout("/layouts/boilerplate.ejs") %>
    <body>
        <div class="row">
            <div class="col-md-8 m-auto">
                <h2>
                    <%= data.title%>
                </h2>

                <div class="card">
                    <img src="<%=data.image.url%>" class="card-img-top show-img rounded-4" alt="<%= data.title %>">
                    <div class="card-body">
                        <p class="card-text">
                            <%= data.description %>
                            <hr style="opacity: 0; margin: -0.2rem 0;">
                                &#8377; <%= data.price %> / night
                                    <br>
                                    <%= data.location %>
                                        <br>
                                        <%= data.country %>
                        </p>
                    </div>
                    <div>
                        <a href="/listings/<%= data._id %>/edit"><button class="btn btn-secondary w-25 mx-2 my-1" style="min-width: 100px; max-width: 150px">Edit</button></a>
                        
                        <form action="/listings/<%= data._id %>?_method=DELETE" method="post" style="display: inline-block; width: 25%; min-width: 100px; max-width: 150px;" class="mx-2 my-1">
                            <button class="btn btn-danger w-100">Delete</button>
                        </form>
                    </div>
                </div>
                <br>

            </div>
        </div>
    </body>