<% layout("./layouts/boilerplate.ejs") %>
    <body>
        <div class="row">
            <div class="col-md-8 m-auto">
                <h2>Edit listing</h2>
                <form action="/listings/<%= data._id %>?_method=PUT" method="post">
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control mb-3" placeholder="Title" id="title" required value="<%= data.title %>">
                    </div>
                    
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description"
                            class="form-control mb-3" placeholder="Description"><%= data.description %></textarea>
                    </div>
                    
                    <div>
                        <label for="image" class="form-label">Image URL</label>
                        <input type="text" name="listing[image]" class="form-control mb-3" placeholder="Image URL" id="image" value="<%= data.image.url %>">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-5">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" class="form-control mb-3" placeholder="Price" id="price" min="300" required
                                value="<%= data.price %>">
                        </div>
                        
                        <div class="col-md-7">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" id="country" class="form-control mb-3" placeholder="Country" required
                                value="<%= data.country %>">
                        </div>
                    </div>
                    
                    <div>
                        <label for="location" class="form-label">Location</label>
                        <textarea name="listing[location]" id="location" class="form-control mb-3" placeholder="Location"
                            required><%= data.location %> </textarea>
                    </div>
                    
                    <button class="btn btn-outline-danger">Edit your listing</button>
                </form>
            </div>
        </div>

        <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'></script>
    </body>